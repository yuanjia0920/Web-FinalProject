@model List<FinalProject.Business.ClassModel>
@{
    ViewBag.Title = "ClassList";
}

<h2>Classes</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClassName</td>
                <td>@item.ClassDescription</td>
                <td>@string.Format("{0:c}", item.ClassPrice)</td>
                
            </tr>
        }
    </table>
}
else
{
    <h2>No class found.</h2>
}

